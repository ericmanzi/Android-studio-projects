<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="eric.com.tipcalculator.Result">

    <TextView android:text="Your tip per person:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/textView5"
        android:layout_above="@+id/tvTip"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$0.0"
        android:id="@+id/tvTip"
        android:textSize="60sp"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/tvTotal"
        android:layout_alignStart="@+id/tvTotal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your total per person:"
        android:id="@+id/textView7"
        android:textSize="30sp"
        android:layout_above="@+id/tvTotal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$0.0"
        android:id="@+id/tvTotal"
        android:textSize="60sp"
        android:layout_above="@+id/recalculate"
        android:layout_alignLeft="@+id/recalculate"
        android:layout_alignStart="@+id/recalculate"
        android:layout_marginBottom="57dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Recalculate "
        android:id="@+id/recalculate"
        android:onClick="recalculate"
        android:textColor="#00BFA5"
        android:background="@drawable/button_shape"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:src="@drawable/french_chef"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:onClick="merci"/>

</RelativeLayout>
