            android:label="MIT GPA" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TechnicalGPA"
            android:label="@string/title_activity_technical_gp" >
